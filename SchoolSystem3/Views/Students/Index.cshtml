@model IEnumerable<SchoolSystem3.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        
        <th>
            Date Of Birth
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Email
        </th>
        <th>
            Address
        </th>
        <th>
            Enrollment Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
